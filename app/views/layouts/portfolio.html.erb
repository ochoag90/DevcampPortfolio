<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content= "<%= @seo %>" >

    <%= stylesheet_link_tag    'portfolio', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= login_helper %>
   
    <%= yield %>

    <%= render "shared/nav" , location: 'bottom' %> 

    <% if session[:source] %>
     <p>Thank you for visiting me from <%= session[:source] %></p>
    <% end %>

  </body>
</html>
